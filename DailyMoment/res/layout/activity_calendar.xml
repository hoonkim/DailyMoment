<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff5d4d"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/calendar_activity_logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/calendar_activity_logo" />

        <ImageView
            android:id="@+id/calendar_activity_config"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/calendar_activity_setting_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/calendar_activity_prev_month"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/calendar_prev_month" />

        <ImageView
            android:id="@+id/calendar_activity_next_month"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/calendar_next_month" />

        <TextView
            android:id="@+id/calendar_activity_this_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <GridView
        android:id="@+id/calendar_activity_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7" >

    </GridView>

</LinearLayout>